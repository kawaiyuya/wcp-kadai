<h1>books</h1>
<% if @post.errors.any? %>
<div id="error_expanation" class="alert alert-danger">
	<ul>
		<% @post.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>

</div>
<% end %>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.body %></td>
				<td><%= link_to "show", post_path(post.id),class:"show_#{post.id}"%></td>
				<td><%= link_to "edit", edit_post_path(post.id),class:"edit_#{post.id}"%></td>
				<td><%= link_to "destroy", destroy_post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？",class:"destroy_#{post.id}"%></td>
			</tr>
		<% end %>
	</tbody>

</table>
<p>New book</p>

<%= form_for(@post) do |f| %>

	<h4>title</h4>
	<%= f.text_field :title, class:"book_title" %>

	<h4>body</h4>
	<%= f.text_area :body, class:"book_body" %>

	<%= f.submit 'Create Book' %>

<% end %>